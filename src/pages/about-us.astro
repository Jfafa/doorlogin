---
import Footer from '../components/footer.astro';
import Header from '../components/header.astro'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<title>
			{process.env.SITE_NAME}âœ¨ - about us
		</title>
		<link rel="icon" href="../favicon.svg" sizes="any" type="image/svg+xml">
		<meta charset="utf-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>

		<link
			href="https://fonts.googleapis.com/css?family=Work+Sans:300,400,500,600,700"
			rel="stylesheet"
		/>

		<link rel="stylesheet" href="../../css/style.css" />
		<link rel="stylesheet" href="../../css/post.css" />
	</head>
	<body>
		<Header></Header>

		<div
      class="hero-wrap hero-wrap-2"
      style="background-image: url('../images/bg_1.jpg')"
      data-stellar-background-ratio="0.5"
    >
      <div class="overlay"></div>
      <div class="container">
        <div
          class="row no-gutters slider-text align-items-end justify-content-start"
        >
          <div class="col-md-8 text-center text-md-left mb-5">
            <p class="breadcrumbs mb-0">
              <span class="mr-3"
                ><a href="./"
                  >Home <i class="ion-ios-arrow-forward"></i></a
              ></span>
              <span>About</span>
            </p>
            <h1 class="mb-3 bread">About</h1>
          </div>
        </div>
      </div>
    </div>

    <section class="ftco-section ftco-faqs">
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
            <div
              class="img img-faqs mb-4 mb-sm-0"
              style="background-image: url(../images/about-2.jpg)"
            ></div>
          </div>
          <div class="col-lg-6 pl-lg-5">
            <div class="heading-section mb-5 mt-5 mt-lg-0">
              <h2 class="mb-3">About {process.env.SITE_NAME}</h2>

              <p>
                Welcome to {process.env.SITE_NAME}, your number one source for all login
                pages. We're dedicated to providing you the very best service,
                with an emphasis on quality.
              </p>

              <p>
                Founded in 2011 by Christopher E Kendrick, {process.env.SITE_NAME} has
                come a long way from its beginnings in Glasgow, United Kingdom.
                When Christopher E Kendrick first started out, his passion for
                helping people drove them to start their own business. We hope
                you enjoy our products as much as we enjoy offering them to you.
                If you have any questions or comments, please don't hesitate to
                contact us. Sincerely, Charlotte J Coates, {process.env.SITE_NAME} CEO
              </p>
            </div>
          </div>
        </div>
		<div class="row d-flex mb-5 contact-info">
			<div class="col-md-12 mb-4">
				<h2 class="h4">Contact Information</h2>
			</div>
			<div class="w-100"></div>
			<div class="col-md-3">
				<p>
					<span>Address:</span> 1663 Nutters Barn Lane, LANCASTER,
					Pennsylvania
				</p>
			</div>
			<div class="col-md-3">
				<p>
					<span>Phone:</span> <a href="tel://202-555-0173">202-555-0173</a>
				</p>
			</div>
			<div class="col-md-3">
				<p>
					<span>Email:</span>
					<a href="mailto:logincollector@protonmail.com">logincollector@protonmail.com</a>
				</p>
			</div>
			<div class="col-md-3">
				<p><span>Website</span> <a href="#">{process.env.SITE_NAME}</a></p>
			</div>
		</div>
		<div class="row block-9">
			<div class="col-md-6 pr-md-5">
				<form action="#">
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Your Name" />
					</div>
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Your Email" />
					</div>
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Subject" />
					</div>
					<div class="form-group">
						<textarea name="" id="" cols="30" rows="7" class="form-control"
							placeholder="Message"></textarea>
					</div>
					<div class="form-group">
						<input type="submit" value="Send Message" class="btn btn-primary py-3 px-5" />
					</div>
				</form>
			</div>
		</div>
      </div>
    </section>
	<Footer></Footer>
	</body>
  
	
</html>
