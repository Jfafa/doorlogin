const { isPage } = Astro.props;
---

<footer class="ftco-footer ftco-bg-dark ftco-section">
	<div class="container">
		<div class="row mb-5">
			<div class="col-md">
				<div class="ftco-footer-widget mb-4">
					<h2 class="ftco-heading-2">{process.env.SITE_NAME}</h2>
					<ul class="ftco-footer-social list-unstyled mb-0">
						<li class="">
							<a href="#"><span class="fa fa-twitter"></span></a>
						</li>
						<li class="">
							<a href="#"><span class="fa fa-facebook"></span></a>
						</li>
						<li class="">
							<a href="#"><span class="fa fa-instagram"></span></a
							>
						</li>
					</ul>
				</div>
			</div>
			<div class="col-md">
				<div class="ftco-footer-widget mb-4 ml-md-5">
					<h2 class="ftco-heading-2">Unseful Links</h2>
					<ul class="list-unstyled">
						<li>
							<a href=`${isPage === 'true' ? '../': ""}../about-us` class="py-2 d-block"
								>Company</a
							>
						</li>
						<li>
							<a href=`${isPage === 'true' ? '../': ""}../posts/1` class="py-2 d-block">Blog</a
							>
						</li>
					</ul>
				</div>
			</div>
			<div class="col-md">
				<div class="ftco-footer-widget mb-4">
					<h2 class="ftco-heading-2">Navigational</h2>
					<ul class="list-unstyled">
						<li>
							<a href=`${isPage === 'true' ? '../': ""}../posts/1` class="py-2 d-block">Blog</a
							>
						</li>
						<li>
							<a href=`${isPage === 'true' ? '../': ""}../privacy-policy` class="py-2 d-block"
								>Privacy &amp; Policy</a
							>
						</li>
					</ul>
				</div>
			</div>
			<div class="col-md">
				<div class="ftco-footer-widget mb-4">
					<h2 class="ftco-heading-2">Office</h2>
					<div class="block-23 mb-3">
						<ul>
							<li>
								<span class="mr-3 fa fa-map-marker"></span><span
									class="text"
									>1663 Nutters Barn Lane, LANCASTER,
									Pennsylvania</span
								>
							</li>
							<li>
								<a href="#"
									><span class="mr-3 fa fa-phone"></span><span
										class="text">202-555-0173</span
									></a
								>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 text-center">
				<p>
					Copyright &copy; All rights reserved | {
						process.env.SITE_NAME
					}
				</p>
			</div>
		</div>
	</div>
</footer>
